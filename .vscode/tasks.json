{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build tests",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-Wall", "-Wextra",
                "lang.cpp", "test.cpp",
                "-o", "tests"
            ]
        },
        {
            "label": "run tests",
            "type": "shell",
            "command": "${workspaceFolder}/tests",
            "dependsOn": "build tests",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "build main",
            "type": "shell",
            "command": "g++",
            "args": [
                "-O3",
                "lang.cpp", "main.cpp",
                "-o", "frequencies"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}